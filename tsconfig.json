{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "cucumber"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}